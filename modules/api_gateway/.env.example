# NEXUS API Gateway - Environment Configuration Example
# Copy this file to .env and update with your values

# Application
APP_NAME=NEXUS API Gateway
APP_VERSION=1.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
NEXUS_GATEWAY_DATABASE_URL=postgresql://nexus:nexus@localhost:5432/nexus_gateway

# Redis
NEXUS_REDIS_HOST=localhost
NEXUS_REDIS_PORT=6379
NEXUS_REDIS_DB=0
NEXUS_REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production-use-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
DEFAULT_RATE_LIMIT=100
DEFAULT_RATE_LIMIT_WINDOW=60

# Caching
DEFAULT_CACHE_TTL=300
CACHE_ENABLED=true

# Timeouts
DEFAULT_TIMEOUT=30.0
BACKEND_CONNECT_TIMEOUT=5.0
BACKEND_READ_TIMEOUT=30.0

# Load Balancing
LOAD_BALANCE_STRATEGY=round_robin

# Monitoring
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=30

# CORS
CORS_ORIGINS=*

# Admin UI
ADMIN_UI_ENABLED=true
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
