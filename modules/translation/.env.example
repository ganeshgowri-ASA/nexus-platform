# Database Configuration
TRANSLATION_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nexus_translation

# Google Cloud Translation API
GOOGLE_TRANSLATE_API_KEY=your_google_api_key_here
GOOGLE_PROJECT_ID=your_google_project_id

# DeepL Translation API
DEEPL_API_KEY=your_deepl_api_key_here

# Default Translation Provider (google or deepl)
DEFAULT_TRANSLATION_PROVIDER=google

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Settings
TRANSLATION_API_HOST=0.0.0.0
TRANSLATION_API_PORT=8000
TRANSLATION_API_RELOAD=true

# Streamlit UI
TRANSLATION_UI_PORT=8501

# File Upload Settings
TRANSLATION_UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10

# Cache Settings
ENABLE_TRANSLATION_CACHE=true
TRANSLATION_CACHE_TTL=3600

# Quality Scoring
ENABLE_QUALITY_SCORING=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
