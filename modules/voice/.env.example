# NEXUS Voice Assistant Configuration

# Application
APP_NAME="NEXUS Voice Assistant"
DEBUG=false

# API
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/nexus_voice

# Speech-to-Text Provider (google or aws)
STT_PROVIDER=google

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Text-to-Speech Provider (google or aws)
TTS_PROVIDER=google
DEFAULT_TTS_VOICE=en-US-Neural2-A
DEFAULT_LANGUAGE=en-US

# LLM Provider (anthropic or openai)
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key

# Audio Processing
TEMP_AUDIO_DIR=/tmp/nexus_voice
MAX_AUDIO_DURATION_SECONDS=300
AUDIO_SAMPLE_RATE=16000

# Session
MAX_SESSION_HISTORY=10
SESSION_TIMEOUT_MINUTES=30
