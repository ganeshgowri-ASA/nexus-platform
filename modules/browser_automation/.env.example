# Application
APP_NAME=NEXUS Browser Automation
APP_VERSION=1.0.0
DEBUG=False

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+asyncpg://nexus:nexus@localhost:5432/nexus_browser_automation
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=3600

# Browser Automation
BROWSER_TYPE=chromium
HEADLESS_MODE=True
BROWSER_TIMEOUT=30000
SCREENSHOT_QUALITY=90
MAX_CONCURRENT_BROWSERS=5

# Storage
STORAGE_PATH=./modules/browser_automation/storage
SCREENSHOT_PATH=./modules/browser_automation/storage/screenshots
PDF_PATH=./modules/browser_automation/storage/pdfs
LOG_PATH=./modules/browser_automation/storage/logs

# Security
SECRET_KEY=your-secret-key-change-in-production-please-use-strong-random-key
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Monitoring
ENABLE_METRICS=True
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
