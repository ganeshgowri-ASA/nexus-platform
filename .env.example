# NEXUS Knowledge Base Configuration

# Environment
ENVIRONMENT=development
DEBUG=true

# Application
APP_NAME=NEXUS Knowledge Base
APP_VERSION=1.0.0

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/nexus_kb
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Elasticsearch
ELASTICSEARCH_HOST=localhost:9200
ELASTICSEARCH_INDEX=kb_content
ELASTICSEARCH_ENABLED=true

# Vector Database (Pinecone)
VECTOR_DB_TYPE=pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX=kb-embeddings

# AI / LLM
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Translation
TRANSLATION_SERVICE=google
GOOGLE_TRANSLATE_API_KEY=your-google-api-key
DEEPL_API_KEY=your-deepl-api-key

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Storage
UPLOAD_FOLDER=/tmp/kb_uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,docx,jpg,png,mp4

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Search
SEARCH_MIN_SCORE=0.5
SEMANTIC_SEARCH_ENABLED=true

# Features
CHATBOT_ENABLED=true
AUTO_TRANSLATION_ENABLED=true
VIDEO_TRANSCRIPTION_ENABLED=true
AUTO_FAQ_GENERATION_ENABLED=true
