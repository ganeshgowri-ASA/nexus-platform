# ===================================
# NEXUS Platform - Environment Configuration
# ===================================

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production

# PostgreSQL Database
DATABASE_URL=postgresql://nexus:nexus@localhost:5432/nexus_analytics
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Celery Task Queue
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=false
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# InfluxDB Time Series
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=nexus
INFLUXDB_BUCKET=analytics

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_FLUSH_INTERVAL=60
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_MAX_EVENTS_PER_MINUTE=10000
ANALYTICS_ENABLE_REAL_TIME=true
ANALYTICS_SESSION_TIMEOUT=1800

# AI Integration
CLAUDE_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-openai-key-here
AI_MODEL=claude-3-5-sonnet-20241022
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_ENABLE_PREDICTIVE_INSIGHTS=true

# FastAPI Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8501
API_RATE_LIMIT=100

# Streamlit Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Feature Flags
FEATURE_SESSION_REPLAY=true
FEATURE_HEATMAPS=true
FEATURE_AB_TESTING=true
FEATURE_PREDICTIVE_ANALYTICS=true
FEATURE_CUSTOM_DASHBOARDS=true
FEATURE_DATA_EXPORT=true

# Export Settings
EXPORT_MAX_ROWS=1000000
EXPORT_FORMATS=csv,json,excel,pdf
EXPORT_TIMEOUT=300

# Monitoring & Observability
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
TRACING_ENABLED=true
SENTRY_DSN=

# Security
CORS_ALLOWED_ORIGINS=*
ALLOWED_HOSTS=localhost,127.0.0.1
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# S3/Storage (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=nexus-analytics-exports

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=analytics@nexus.com
