# NEXUS Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=NEXUS Platform
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://nexus_user:password@localhost:5432/nexus_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=0
REDIS_CELERY_DB=1
REDIS_MAX_CONNECTIONS=50

# ============================================================================
# Celery Configuration
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# ============================================================================
# Authentication & Security
# ============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
BCRYPT_ROUNDS=12

# ============================================================================
# AI & LLM Configuration
# ============================================================================
# Claude (Anthropic)
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# ============================================================================
# Translation Services Configuration
# ============================================================================
# Default Translation Engine (google, deepl, azure, aws, openai, claude)
DEFAULT_TRANSLATION_ENGINE=deepl

# Google Translate
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key
GOOGLE_TRANSLATE_PROJECT_ID=your-project-id

# DeepL
DEEPL_API_KEY=your-deepl-api-key
DEEPL_API_URL=https://api-free.deepl.com/v2

# Azure Translator
AZURE_TRANSLATOR_KEY=your-azure-translator-key
AZURE_TRANSLATOR_REGION=eastus
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com

# AWS Translate
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_TRANSLATE_ENDPOINT=https://translate.us-east-1.amazonaws.com

# Translation Settings
TRANSLATION_CACHE_TTL=86400
TRANSLATION_MAX_BATCH_SIZE=100
TRANSLATION_TIMEOUT_SECONDS=30
ENABLE_AUTO_LANGUAGE_DETECTION=true
ENABLE_TRANSLATION_MEMORY=true
ENABLE_GLOSSARY=true
TRANSLATION_QUALITY_THRESHOLD=0.7

# ============================================================================
# File Storage Configuration
# ============================================================================
# Storage Provider (local, s3, azure, gcs, minio)
STORAGE_PROVIDER=local
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=100
ALLOWED_UPLOAD_EXTENSIONS=.pdf,.docx,.xlsx,.pptx,.txt,.html,.json,.xml

# AWS S3
S3_BUCKET_NAME=nexus-documents
S3_REGION=us-east-1
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_STORAGE_CONTAINER=nexus-documents

# Google Cloud Storage
GCS_BUCKET_NAME=nexus-documents
GCS_PROJECT_ID=your-project-id
GCS_CREDENTIALS_PATH=/path/to/credentials.json

# MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=nexus-documents
MINIO_SECURE=false

# ============================================================================
# Email Configuration (for notifications)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@nexus-platform.com
SMTP_FROM_NAME=NEXUS Platform
SMTP_USE_TLS=true

# ============================================================================
# WebSocket Configuration
# ============================================================================
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8001
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# ============================================================================
# API Configuration
# ============================================================================
API_V1_PREFIX=/api/v1
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
API_RATE_LIMIT_PER_MINUTE=60
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# ============================================================================
# Monitoring & Analytics
# ============================================================================
# Sentry
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_TRANSLATION_MODULE=true
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_AI_TRANSLATION=true
ENABLE_BATCH_TRANSLATION=true
ENABLE_STREAMING_TRANSLATION=true
ENABLE_QUALITY_ASSESSMENT=true
ENABLE_TRANSLATION_MEMORY=true
ENABLE_GLOSSARY_MANAGEMENT=true
ENABLE_AUTO_DETECTION=true
ENABLE_BACK_TRANSLATION=true
ENABLE_CONTEXT_ANALYSIS=true

# ============================================================================
# Development Settings
# ============================================================================
# Hot Reload
RELOAD=true

# Logging
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Testing
TEST_DATABASE_URL=postgresql://nexus_test:password@localhost:5432/nexus_test_db
