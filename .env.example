# Environment Configuration
ENV=development

# Claude AI
ANTHROPIC_API_KEY=your_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Database
DATABASE_URL=sqlite:///./nexus.db

# Redis (for caching and celery)
REDIS_URL=redis://localhost:6379/0

# Session 56: Browser Automation
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# Session 57: Workflow Automation
WORKFLOW_EXECUTOR=celery
WORKFLOW_MAX_WORKERS=4

# Session 58: API Integrations
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
GITHUB_TOKEN=your_github_token

# Session 59: Voice Assistant
VOICE_ENGINE=whisper
VOICE_LANGUAGE=en
TTS_ENGINE=gtts

# Session 60: Translation
TRANSLATION_ENGINE=google
TRANSLATION_CACHE_ENABLED=true

# Session 61: OCR Engine
OCR_ENGINE=easyocr
OCR_LANGUAGES=en
OCR_GPU_ENABLED=false

# Session 62: Sentiment Analysis
SENTIMENT_MODEL=distilbert-base-uncased-finetuned-sst-2-english
NER_MODEL=en_core_web_sm

# Session 63: Chatbot Builder
CHATBOT_ENGINE=rasa
CHATBOT_MODEL_PATH=./models/chatbot

# Session 64: Document Parser
DOCUMENT_PARSER_CACHE=true
TESSERACT_PATH=/usr/bin/tesseract

# Session 65: Data Pipeline
PIPELINE_SCHEDULER=prefect
PIPELINE_BACKEND=local
DATA_WAREHOUSE_URL=sqlite:///./warehouse.db

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=http://localhost:8501

# Performance
CACHE_ENABLED=true
CACHE_TTL=3600
MAX_UPLOAD_SIZE=100000000
