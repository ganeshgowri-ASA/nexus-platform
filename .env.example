# NEXUS Platform - Environment Configuration
# Copy this file to .env and update with your values

# ====================
# Application Settings
# ====================
APP_NAME=NEXUS Platform
APP_ENV=development
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=info

# ====================
# Security Configuration
# ====================
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
SESSION_TIMEOUT_MINUTES=60

# ====================
# CORS Settings
# ====================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173,http://localhost:8501

# ====================
# Rate Limiting
# ====================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ====================
# Database Configuration
# ====================
DATABASE_URL=postgresql://user:password@localhost:5432/nexus_db
# DATABASE_URL=sqlite:///./nexus_platform.db  # For development with SQLite
# DATABASE_URL=mysql://user:password@localhost/nexus_platform  # For MySQL

# ====================
# Redis Configuration
# ====================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# ====================
# Celery Settings
# ====================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ====================
# File Upload Settings
# ====================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.jpg,.jpeg,.png,.gif

# ====================
# Email Configuration (SMTP)
# ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@nexus-platform.com
SMTP_FROM_NAME=NEXUS Platform
EMAIL_FROM=noreply@nexusplatform.com

# ====================
# OAuth Providers
# ====================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8501/oauth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URI=http://localhost:8501/oauth/microsoft/callback

# ====================
# AI Provider Settings
# ====================
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
AI_DEFAULT_MODEL=gpt-3.5-turbo

# ====================
# WebSocket Settings
# ====================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS_PER_USER=5
ENABLE_WEBSOCKET=true

# ====================
# Monitoring & Logging
# ====================
SENTRY_DSN=https://your-sentry-dsn
ENABLE_SENTRY=false
LOG_FILE=./logs/nexus-api.log

# ====================
# Feature Flags
# ====================
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_FEATURES=true
ENABLE_FILE_UPLOAD=true
