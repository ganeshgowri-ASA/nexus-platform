# NEXUS Platform Configuration

# Email Service Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password
EMAIL_SMTP_USE_TLS=True

EMAIL_IMAP_HOST=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_IMAP_USERNAME=your-email@gmail.com
EMAIL_IMAP_PASSWORD=your-app-password
EMAIL_IMAP_USE_SSL=True

# Email Settings
EMAIL_DEFAULT_SENDER=your-email@gmail.com
EMAIL_MAX_ATTACHMENT_SIZE_MB=25
EMAIL_SYNC_INTERVAL_MINUTES=5
EMAIL_BATCH_SIZE=50

# Database
DATABASE_URL=sqlite:///./nexus.db

# Application
APP_ENV=development
APP_DEBUG=True
SECRET_KEY=your-secret-key-here

# Spam Filter Settings
SPAM_FILTER_THRESHOLD=0.7
SPAM_KEYWORDS=spam,lottery,winner,congratulations,click here

# Tracking
EMAIL_TRACKING_ENABLED=True
