# NEXUS Platform - Environment Configuration
# Copy this file to .env and configure with your actual values

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=sqlite:///./nexus.db
# For PostgreSQL: postgresql://user:password@localhost/nexus
# For MySQL: mysql://user:password@localhost/nexus

# =============================================================================
# Email Configuration
# =============================================================================
EMAIL_BACKEND=smtp
# Options: smtp, sendgrid, ses

# SMTP Settings (for EMAIL_BACKEND=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
EMAIL_FROM=noreply@nexus.com
EMAIL_FROM_NAME=NEXUS Platform

# SendGrid Settings (for EMAIL_BACKEND=sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS SES Settings (for EMAIL_BACKEND=ses)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# =============================================================================
# SMS Configuration
# =============================================================================
SMS_BACKEND=twilio
# Options: twilio, sns

# Twilio Settings (for SMS_BACKEND=twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# AWS SNS Settings (for SMS_BACKEND=sns)
SNS_SENDER_ID=NEXUS

# =============================================================================
# Push Notification Configuration (Firebase Cloud Messaging)
# =============================================================================
PUSH_BACKEND=fcm
# Options: fcm, apns

# Firebase Cloud Messaging Settings
FCM_SERVER_KEY=your-fcm-server-key
FCM_CREDENTIALS_PATH=/path/to/firebase-credentials.json
FCM_PROJECT_ID=your-firebase-project-id

# Apple Push Notification Service Settings
APNS_CERTIFICATE_PATH=/path/to/apns-cert.pem
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# =============================================================================
# In-App Notification Configuration
# =============================================================================
IN_APP_TTL_DAYS=30
IN_APP_MAX_PER_USER=100

# =============================================================================
# Scheduler Configuration
# =============================================================================
SCHEDULER_CHECK_INTERVAL=60

# =============================================================================
# Unsubscribe Configuration
# =============================================================================
UNSUBSCRIBE_TOKEN_EXPIRY_DAYS=90

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=false
SECRET_KEY=your-secret-key-change-this-in-production

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=*
