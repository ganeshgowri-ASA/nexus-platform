# NEXUS Platform Environment Configuration

# Database Configuration
DATABASE_URL=sqlite:///./nexus_platform.db
# For PostgreSQL: postgresql://user:password@localhost/nexus_platform
# For MySQL: mysql://user:password@localhost/nexus_platform

# JWT Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Security Settings
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
SESSION_TIMEOUT_MINUTES=60

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8501/oauth/google/callback

# Microsoft OAuth (Optional)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URI=http://localhost:8501/oauth/microsoft/callback

# Email Configuration (Optional - for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@nexusplatform.com

# Application Settings
APP_NAME=NEXUS Platform
APP_ENV=development
DEBUG=true
