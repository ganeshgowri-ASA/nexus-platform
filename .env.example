# Database Configuration
DATABASE_URL=postgresql+asyncpg://nexus_user:nexus_pass@localhost:5432/nexus_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Keys
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production
API_V1_STR=/api/v1
PROJECT_NAME=NEXUS Platform

# Storage Configuration
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# OCR Settings
OCR_ENGINE=tesseract  # Options: tesseract, google_vision, aws_textract
OCR_CONFIDENCE_THRESHOLD=0.7
TESSERACT_CMD=/usr/bin/tesseract

# Translation Settings
TRANSLATION_SERVICE=google  # Options: google, anthropic
DEFAULT_SOURCE_LANGUAGE=auto
DEFAULT_TARGET_LANGUAGE=en
MAX_TRANSLATION_LENGTH=5000

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:8501", "http://localhost:3000"]
