# NEXUS Platform Environment Variables
# Copy this file to .env and update with your values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME="NEXUS Platform"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG="true"

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# SQLite (Development)
DATABASE__URL="sqlite:///nexus.db"

# PostgreSQL (Production)
# DATABASE__URL="postgresql://user:password@localhost:5432/nexus"

DATABASE__ECHO="false"
DATABASE__POOL_SIZE="5"
DATABASE__MAX_OVERFLOW="10"

# ============================================================================
# ANTHROPIC CLAUDE API
# ============================================================================
ANTHROPIC__API_KEY="your-anthropic-api-key-here"
ANTHROPIC__MODEL="claude-3-5-sonnet-20241022"
ANTHROPIC__MAX_TOKENS="4096"
ANTHROPIC__TEMPERATURE="0.7"

# ============================================================================
# UI CONFIGURATION
# ============================================================================
UI__THEME="dark"  # dark, light
UI__PRIMARY_COLOR="#6366f1"
UI__SECONDARY_COLOR="#8b5cf6"
UI__SIDEBAR_STATE="expanded"  # expanded, collapsed
UI__LAYOUT="wide"  # wide, centered

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOGGING__LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGGING__FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOGGING__FILE_PATH="logs/nexus.log"
LOGGING__MAX_BYTES="10485760"  # 10MB
LOGGING__BACKUP_COUNT="5"

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
SECURITY__SECRET_KEY="change-me-in-production-to-a-long-random-string"
SECURITY__ALLOWED_ORIGINS="*"
SECURITY__SESSION_TIMEOUT="3600"  # seconds

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_ANALYTICS="true"
ENABLE_AI_FEATURES="true"
ENABLE_COLLABORATION="true"

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
EMAIL__SMTP_HOST="smtp.gmail.com"
EMAIL__SMTP_PORT="587"
EMAIL__USERNAME="your-email@example.com"
EMAIL__PASSWORD="your-email-password"
EMAIL__FROM_ADDRESS="noreply@nexus-platform.com"
EMAIL__USE_TLS="true"

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================================================
REDIS__HOST="localhost"
REDIS__PORT="6379"
REDIS__DB="0"
REDIS__PASSWORD=""

# ============================================================================
# AWS CONFIGURATION (Optional - for cloud deployment)
# ============================================================================
AWS__ACCESS_KEY_ID=""
AWS__SECRET_ACCESS_KEY=""
AWS__REGION="us-east-1"
AWS__S3_BUCKET="nexus-platform-storage"

# ============================================================================
# MONITORING & ANALYTICS (Optional)
# ============================================================================
SENTRY__DSN=""
GOOGLE_ANALYTICS_ID=""

# ============================================================================
# API CONFIGURATION (Future)
# ============================================================================
API__HOST="0.0.0.0"
API__PORT="8000"
API__WORKERS="4"
API__RELOAD="true"

# ============================================================================
# STREAMLIT CONFIGURATION
# ============================================================================
STREAMLIT__SERVER__PORT="8501"
STREAMLIT__SERVER__ADDRESS="0.0.0.0"
STREAMLIT__SERVER__HEADLESS="true"
STREAMLIT__BROWSER__GATHER_USAGE_STATS="false"

# ============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ============================================================================
SLACK__WEBHOOK_URL=""
DISCORD__WEBHOOK_URL=""
GITHUB__TOKEN=""

# ============================================================================
# BACKUP & STORAGE (Optional)
# ============================================================================
BACKUP__ENABLED="true"
BACKUP__SCHEDULE="0 2 * * *"  # Cron format: Daily at 2 AM
BACKUP__RETENTION_DAYS="30"
STORAGE__TYPE="local"  # local, s3, azure
STORAGE__PATH="data/storage"

# ============================================================================
# RATE LIMITING (Optional)
# ============================================================================
RATE_LIMIT__ENABLED="true"
RATE_LIMIT__REQUESTS_PER_MINUTE="60"
RATE_LIMIT__REQUESTS_PER_HOUR="1000"

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
DEV__AUTO_RELOAD="true"
DEV__SHOW_ERRORS="true"
DEV__MOCK_EXTERNAL_APIS="false"
