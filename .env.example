# NEXUS Platform API - Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=info

# Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nexus_db
# DATABASE_URL=sqlite:///./nexus.db  # For development with SQLite

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.jpg,.jpeg,.png,.gif

# Email Settings (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@nexus-platform.com
SMTP_FROM_NAME=NEXUS Platform

# AI Provider Settings (Optional)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
AI_DEFAULT_MODEL=gpt-3.5-turbo

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS_PER_USER=5

# Celery Settings (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn
ENABLE_SENTRY=false
LOG_FILE=./logs/nexus-api.log

# External Services
# Add your external service configurations here

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_FEATURES=true
ENABLE_FILE_UPLOAD=true
ENABLE_WEBSOCKET=true
