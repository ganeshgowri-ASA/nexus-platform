# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/nexus_seo
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=4

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI/LLM Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=claude-sonnet-4.5

# Google Search Console API
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Third-party SEO APIs
SEMRUSH_API_KEY=your-semrush-api-key
AHREFS_API_KEY=your-ahrefs-api-key
MOZ_ACCESS_ID=your-moz-access-id
MOZ_SECRET_KEY=your-moz-secret-key
SCREAMING_FROG_API_KEY=your-screaming-frog-api-key

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/seo.log

# SEO Configuration
DEFAULT_USER_AGENT=Mozilla/5.0 (compatible; NEXUS-SEO-Bot/1.0)
MAX_CRAWL_DEPTH=3
MAX_PAGES_PER_CRAWL=1000
CRAWL_DELAY=1.0

# Performance
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
CACHE_ENABLED=true

# Feature Flags
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_AUTO_REPORTING=true
ENABLE_REAL_TIME_TRACKING=true
